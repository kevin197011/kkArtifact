# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kkartifact
DB_USER=kkartifact
DB_PASSWORD=kkartifact
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
STORAGE_TYPE=s3
# For S3/OSS
STORAGE_S3_ENDPOINT=http://minio:9000
STORAGE_S3_ACCESS_KEY=minioadmin
STORAGE_S3_SECRET_KEY=minioadmin
STORAGE_S3_BUCKET=kkartifact
STORAGE_S3_REGION=us-east-1
STORAGE_S3_USE_SSL=false
# For local filesystem (development)
STORAGE_LOCAL_PATH=/repos

# Artifact Storage Path (relative to storage backend)
STORAGE_BASE_PATH=/repos

# Global Version Retention
VERSION_RETENTION_LIMIT=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
